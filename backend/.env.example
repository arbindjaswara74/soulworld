# Example environment variables for SoulWorld backend
# Copy this file to .env and fill in values before running locally

# MongoDB full URI (optional). If not provided, DB_USER/DB_PASS/DB_HOST/DB_NAME will be used.
MONGODB_URI=

# Or provide discrete components (DB_USER and DB_PASS will be URL-encoded for you)
DB_USER=
DB_PASS=
DB_HOST=
DB_NAME=soulworld

# Admin API key for protected operations (DELETE story)
ADMIN_KEY=

# Server port
PORT=5000

# NODE_ENV=development or production
NODE_ENV=development
